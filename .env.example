# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=development
PORT=3000

# ================================
# API CONFIGURATION
# ================================
API_VERSION=v1
API_BASE_PATH=api

# ================================
# ROUTE PREFIXES
# ================================
ROUTE_PREFIX_AUTH=auth
ROUTE_PREFIX_COURSE=course
ROUTE_PREFIX_BATCH=batch

# ================================
# DATABASE CONFIGURATION
# ================================
LOCAL_DATABASE_URI=mongodb://127.0.0.1:27017/student_batch

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
FILE_UPLOAD_PATH=./public/uploads
MAX_FILE_UPLOAD=20000
STATIC_FOLDER=public

# ================================
# REQUEST CONFIGURATION
# ================================
REQUEST_BODY_LIMIT=10mb

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ================================
# LOGGING CONFIGURATION
# ================================
# Options: dev, combined, common, short, tiny
MORGAN_FORMAT=dev

# ================================
# JWT CONFIGURATION
# ================================
# IMPORTANT: Change this to a strong secret in production
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# ================================
# OAUTH CONFIGURATION
# ================================
# Google OAuth 2.0 Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Apple Sign-In Configuration
# Get these from: https://developer.apple.com/account/resources/identifiers/list
# This should be your app's bundle ID (e.g., com.yourcompany.yourapp)
APPLE_CLIENT_ID=com.yourcompany.yourapp
