# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=production
PORT=3000

# ================================
# API CONFIGURATION
# ================================
API_VERSION=v1
API_BASE_PATH=api

# ================================
# ROUTE PREFIXES
# ================================
ROUTE_PREFIX_AUTH=auth
ROUTE_PREFIX_COURSE=course
ROUTE_PREFIX_BATCH=batch

# ================================
# DATABASE CONFIGURATION
# ================================
# Production: Use MongoDB Atlas or managed MongoDB instance
# Example: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
LOCAL_DATABASE_URI=mongodb://127.0.0.1:27017/student_batch

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
FILE_UPLOAD_PATH=./public/uploads
MAX_FILE_UPLOAD=5242880
STATIC_FOLDER=public

# ================================
# REQUEST CONFIGURATION
# ================================
REQUEST_BODY_LIMIT=5mb

# ================================
# CORS CONFIGURATION
# ================================
# IMPORTANT: Set to your actual frontend domain in production
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# ================================
# LOGGING CONFIGURATION
# ================================
# Options: combined, common, dev, short, tiny
MORGAN_FORMAT=combined

# ================================
# JWT CONFIGURATION
# ================================
# CRITICAL: Use a strong random secret (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_MIN_32_CHARS
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
